<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" >
    <aura:attribute name="recordCreateThreshold" type="Integer" default="5" access="global" />
    <aura:attribute name="recordCreateActionThreshold" type="Integer" default="120" access="global" />
    <aura:attribute name="record" type="Object"/>
    <aura:attribute name="subtabClickEventSent" type="Boolean" default="false"/>

    <aura:attribute name="recordId" type="String"/>
    <lightning:overlayLibrary aura:id="overlayLib"/>
    <force:recordData aura:id="forceRecord"
                      recordId="{!v.recordId}" 
                      layoutType="FULL"
                      targetRecord="{!v.record}"
                      recordUpdated="{!c.recordUpdated}" />
    <aura:registerEvent name="BuddyEvent" type="c:BuddyEvent"/>
    <aura:handler event="c:ObjectSubtabClickedEvent" action="{!c.handleSubTabEvent}"/>

</aura:component>